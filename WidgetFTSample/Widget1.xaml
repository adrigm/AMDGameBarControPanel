<Page
    x:Class="WidgetFTSample.Widget1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WidgetFTSample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="400"
    Height="400">

    <Page.Resources>
        <!-- Estilo para botones planos -->
        <Style x:Key="FlatButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Page.Resources>

    <Grid Background="#25282c" HorizontalAlignment="Center">
        <StackPanel
            x:Name="contentPanel"
            Orientation="Vertical"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Spacing="12">

            <!-- Botón para AFMF -->
            <Button
                Style="{StaticResource FlatButtonStyle}"
                Click="btnAfmfClick"
                Background="Transparent"
                HorizontalAlignment="Center"
                Height="64"
                Width="360">

                <Grid Height="64" Width="360" HorizontalAlignment="Left" Padding="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="AFMF 2.1" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="AMD Fluid Motion Frames" FontSize="12" Opacity="0.65" SelectionChanged="TextBlock_SelectionChanged"/>
                    </StackPanel>

                    <ToggleSwitch x:Name="afmfSwitch"
                                  Grid.Column="1"
                                  Width="64"
                                  OnContent=""
                                  OffContent=""
                                  IsTapEnabled="False"
                                  IsFocusEngaged="False"
                                  IsFocusEngagementEnabled="False"
                                  IsOn="{x:Bind IsAFMFEnabled, Mode=TwoWay}"/>
                </Grid>
            </Button>

            <!-- Botón para RIS -->
            <Button
                Style="{StaticResource FlatButtonStyle}"
                Click="btnRisClick"
                Background="Transparent"
                HorizontalAlignment="Center"
                Height="64"
                Width="360">

                <Grid Height="64" Width="360" HorizontalAlignment="Left" Padding="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="RIS" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="Radeon Image Sharpening" FontSize="12" Opacity="0.65"/>
                    </StackPanel>

                    <ToggleSwitch x:Name="risSwitch"
                                  Grid.Column="1"
                                  Width="64"
                                  OnContent=""
                                  OffContent=""
                                  IsTapEnabled="False"
                                  IsFocusEngaged="False"
                                  IsFocusEngagementEnabled="False"
                                  IsOn="{x:Bind IsRISEnabled, Mode=TwoWay}"/>
                </Grid>
            </Button>

            <!-- Slider de nitidez RIS -->
            <StackPanel x:Name="risSliderPanel" Margin="10,0,0,-4" Padding="30,0,30,0">
                <StackPanel Orientation="Horizontal"  >
                    <TextBlock
                        x:Name="sharpnessTitle"
                        Text="Sharpness"
                        FontSize="13"
                        Opacity="0.75"
        
                        HorizontalAlignment="Left"/>
                <TextBlock
                        x:Name="sharpnessCurrent"
                        Text=""
                        FontSize="13"
                        Opacity="0.75"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"/>
                </StackPanel>

                <Slider
                    x:Name="risSharpnessSlider"
                    Width="360"
                    HorizontalAlignment="Left"
                    Margin="0,-0,0,0"
                    Minimum="0"
                    Padding="0,4,0,0"
                    Maximum="100"
                    StepFrequency="1"
                    IsFocusEngagementEnabled="False"
                    Value="{x:Bind SharpnessValue, Mode=TwoWay}"
                    IsThumbToolTipEnabled="True"/>
            </StackPanel>

            <!-- Botón para RSR -->
            <Button
                Style="{StaticResource FlatButtonStyle}"
                Click="btnRsrClick"
                Background="Transparent"
                HorizontalAlignment="Center"
                Height="64"
                Width="360">

                <Grid Height="64" Width="360" HorizontalAlignment="Left" Padding="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="RSR" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="Radeon Super Resolution" FontSize="12" Opacity="0.65"/>
                    </StackPanel>

                    <ToggleSwitch x:Name="rsrSwitch"
                      Grid.Column="1"
                      Width="64"
                      OnContent=""
                      OffContent=""
                      IsTapEnabled="False"
                      IsFocusEngaged="False"
                      IsFocusEngagementEnabled="False"
                      IsOn="{x:Bind IsRSREnabled, Mode=TwoWay}"/>
                </Grid>
            </Button>

            <!-- Botón para BOOST -->
            <Button
                Style="{StaticResource FlatButtonStyle}"
                Click="btnBoostClick"
                Background="Transparent"
                HorizontalAlignment="Center"
                Height="64"
                Width="360">

                <Grid Height="64" Width="360" HorizontalAlignment="Left" Padding="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="Radeon Boost" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="AMD Radeon Boost" FontSize="12" Opacity="0.65"/>
                    </StackPanel>

                    <ToggleSwitch x:Name="boostSwitch"
                                  Grid.Column="1"
                                  Width="64"
                                  OnContent=""
                                  OffContent=""
                                  IsTapEnabled="False"
                                  IsFocusEngaged="False"
                                  IsFocusEngagementEnabled="False"
                                  IsOn="{x:Bind IsBoostEnabled, Mode=TwoWay}"/>
                </Grid>
            </Button>

            <!-- Selector modo Boost -->
            <StackPanel x:Name="boostModePanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Visibility="Collapsed"
                        Spacing="10"
                        Padding="30,0,30,0">

                <TextBlock Text="Mode" FontSize="13" Opacity="0.75"
                           VerticalAlignment="Center"/>

                <ComboBox x:Name="boostModeCombo"
                          Width="150"
                          SelectedIndex="{x:Bind BoostMode, Mode=TwoWay}">
                    <ComboBoxItem Content="Quality"/>
                    <ComboBoxItem Content="Performance"/>
                </ComboBox>
            </StackPanel>



        </StackPanel>

        <!-- Mensaje para hardware no soportado -->
        <TextBlock
        x:Name="unsupportedText"
        Text="Device not supported"
        Foreground="White"
        FontSize="16"
        FontWeight="SemiBold"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Visibility="Collapsed"/>
    </Grid>
</Page>
